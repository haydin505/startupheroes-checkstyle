<rules>
   <rule>
      <key>es.startuphero.checkstyle.checks.EmptyLineCheck</key>
      <name>Empty Line Check</name>
      <category name="design"/>
      <description>Checks that any Exception class which matches the defined className regexp have at least one constructor with Exception cause as a
         parameter.
      </description>
      <configKey>Checker/TreeWalker/es.startuphero.checkstyle.checks.EmptyLineCheck</configKey>
   </rule>

   <rule>
      <key>es.startuphero.checkstyle.checks.EntityEqualsHashCodeCheck</key>
      <name>Entity Hascode and Equals Check</name>
      <param key="entityAnnotation" type="STRING">
         <defaultValue>javax.persistence.Entity</defaultValue>
         <description>Pattern for lines to ignore.</description>
      </param>

      <param key="idAnnotation" type="STRING">
         <defaultValue>javax.persistence.Id</defaultValue>
         <description>Pattern for lines to ignore.</description>
      </param>

      <param key="abstractEntityAnnotation" type="STRING">
         <defaultValue>javax.persistence.MappedSuperclass</defaultValue>
         <description>Pattern for lines to ignore.</description>
      </param>

      <category name="design"/>
      <description>Checks that any Exception class which matches the defined className regexp have at least one constructor with Exception cause as a
         parameter.
      </description>
      <configKey>Checker/TreeWalker/es.startuphero.checkstyle.checks.EntityEqualsHashCodeCheck</configKey>
   </rule>


</rules>
